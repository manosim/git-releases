{
  "name": "git-releases",
  "version": "0.0.1",
  "description": "A nice way to view repositories GitHub Releases.",
  "main": "index.js",
  "scripts": {
    "build-js": "mkdir -p build/js && browserify -t babelify src/js/app.js -o build/js/app.js",
    "build": "ulimit -n 512 && npm install && grunt build && npm run build-js",
    "watch-js": "watchify -t babelify src/js/app.js -o build/js/app.js -v",
    "watch": "npm run build && grunt build && npm run watch-js & grunt watch",

    "start": "npm run build && http-server . -o -c-1 & npm run watch-js & npm run watch-less",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ekonstantinidis/git-releases.git"
  },
  "keywords": [
    "github",
    "releases",
    "stats",
    "downloads",
    "count"
  ],
  "author": "Emmanouil Konstantinidis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ekonstantinidis/git-releases/issues"
  },
  "homepage": "https://github.com/ekonstantinidis/git-releases#readme",
  "dependencies": {
    "bootstrap": "=3.3.5",
    "font-awesome": "=4.4.0",
    "react": "=0.13.3",
    "reloading": "0.0.6",
    "superagent": "=1.2.0",
    "underscore": "=1.8.3"
  },
  "devDependencies": {
    "babelify": "=6.1.3",
    "browserify": "=11.0.1",
    "grunt": "=0.4.5",
    "grunt-contrib-clean": "=0.6.0",
    "grunt-contrib-copy": "=0.8.0",
    "grunt-contrib-less": "=1.0.1",
    "grunt-contrib-watch": "=0.6.1",
    "grunt-jscs": "=2.0.0",
    "jscs": "=2.0.0",
    "jshint-stylish": "=2.0.1",
    "jsxhint": "=0.15.1",
    "less": "=2.5.1",
    "watchify": "=3.3.1"
  }
}
